{
    "name": "casbin/think-adapter",
    "keywords": ["casbin", "thinkphp", "casbin-adapter", "database"],
    "description": "Use casbin in thinkphp. ",
    "authors": [
        {
            "name": "TechLee",
            "email": "techlee@qq.com"
        }
    ],
    "license": "Apache-2.0",
    "require": {
        "topthink/think": "5.1.*",
        "topthink/think-migration": "^2.0",
    	"casbin/casbin": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7|~6.0|~7.0",
        "php-coveralls/php-coveralls": "^2.1"        
    },
    "autoload": {
        "psr-4": {
            "CasbinAdapter\\Think\\": "src/"
        },
        "files": [
            "helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CasbinAdapter\\Think\\Tests\\": "tests/",
            "think\\": "vendor/topthink/framework/library/think/",
            "traits\\": "vendor/topthink/framework/library/traits/"
        }
    }
}
